 
<section class="new-post-container">
    <h2>Create New Post</h2>

    <form class="new-post">
      <div class="title-content">
        <div>
            <label class="post-title" for="post-title">Title:</label>
            <input type="text" id="post-title" name= "post-title">
        </div>
        <div>
            <label class="post-title" for="post-content">Content:</label>
            <input id="post-content" name="post-content"/>
            </div>
        </div>
        <button id="create-btn" type="submit" class="button">Create</button>
    </form>
</section>

{{#if posts.length}}
<section class="your-posts">
  <h2 class="your-post-title">Your Posts</h2>
  <ul class="ul-your-post">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}


<script src="/javascript/add-post.js"></script>